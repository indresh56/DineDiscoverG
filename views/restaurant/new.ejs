<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">New restaurant</h1>
        <div class="col-6 offset-3">
            <form action="/restaurant" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="restaurant[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="restaurant[location]" required>
                </div>
                <input type="file" name="image" id="" multiple>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="restaurant[image]">
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="restaurant[description]"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="phone">Phone</label>
                    <input class="form-control" type="text" id="phone" name="restaurant[phone] required">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add restaurant</button>
                </div>

            </form>
            <a href="/restaurant">All restaurant</a>
        </div>
    </div>