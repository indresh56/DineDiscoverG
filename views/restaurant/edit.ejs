<% layout('layouts/boilerplate')%>


    <div class="row">
        <h1 class="text-center">Edit restaurant</h1>
        <div class="col-6 offset-3">
            <form action="/restaurant/<%= restaurant._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="restaurant[title]"
                        value="<%= restaurant.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="restaurant[location]"
                        value="<%= restaurant.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="restaurant[image]"
                        value="<%= restaurant.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        value="<%= restaurant.description %>"><%=restaurant.description%></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="phone">Phone</label>
                    <input class="form-control" type="text" id="phone" name="restaurant[phone]"
                        value="<%= restaurant.phone %>">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update restaurant</button>
                </div>

            </form>
            <a href="/restaurant/<%=restaurant._id%>">Back to restaurant</a>
        </div>
    </div>